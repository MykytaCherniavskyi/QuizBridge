{
  "manifest_version": 3,
  "name": "QuizBridge",
  "description": "Bridge your vocabulary lists to Quizlet flashcards seamlessly",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "contextMenus", "tabs", "unlimitedStorage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "32": "src/assets/icon32.png",
      "96": "src/assets/icon96.png",
      "128": "src/assets/icon128.png",
      "144": "src/assets/icon144.png"
    },
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "32": "src/assets/icon32.png",
    "96": "src/assets/icon96.png",
    "128": "src/assets/icon128.png",
    "144": "src/assets/icon144.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://quizlet.com/*/edit"],
      "js": ["src/content.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["welcome.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
